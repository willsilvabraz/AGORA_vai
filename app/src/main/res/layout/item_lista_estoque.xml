<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <androidx.cardview.widget.CardView
        android:id="@+id/containerImgProduto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgProdutoView"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textoNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/aleo_bold"
        android:text="NOME DO PRODUTO"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/containerImgProduto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoquantidade"
        android:layout_width="247dp"
        android:layout_height="41dp"
        android:layout_margin="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/aleo_bold"
        android:text="Descrição do produto ~ CONTEÚDO DESCRITIVO ~"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/containerImgProduto"
        app:layout_constraintTop_toBottomOf="@+id/textoNome" />

    <TextView
        android:id="@+id/textoValor"
        android:layout_width="129dp"
        android:layout_height="27dp"
        android:fontFamily="@font/aleo_bold"
        android:text="~R$25,00~"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoquantidade" />

    <Button
        android:id="@+id/button"
        android:layout_width="124dp"
        android:layout_height="49dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/cor3"
        android:fontFamily="@font/aleo_bold"
        android:text="Adicionar"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textoValor"
        app:layout_constraintTop_toTopOf="@+id/textoquantidade" />

</androidx.constraintlayout.widget.ConstraintLayout>